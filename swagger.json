{
  "openapi": "3.0.0",
  "info": {
    "title": "Planes",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {
      "UserRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          }
        },
        "required": [
          "name"
        ],
        "additionalProperties": false
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "funds": {
            "type": "number",
            "format": "float",
            "minimum": 0
          }
        },
        "required": [
          "_id",
          "name",
          "funds"
        ],
        "additionalProperties": false
      },
      "AirportResponse": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "Point"
                ]
              },
              "coordinates": {
                "type": "array",
                "items": {
                  "type": "number",
                  "format": "float"
                },
                "minItems": 2,
                "maxItems": 2
              }
            },
            "required": [
              "type",
              "coordinates"
            ],
            "additionalProperties": false
          }
        },
        "required": [
          "_id",
          "name",
          "location"
        ],
        "additionalProperties": false
      },
      "PlanePurchaseRequest": {
        "type": "object",
        "properties": {
          "tailNumber": {
            "type": "string",
            "pattern": "^[0-9A-Z]{6}$"
          },
          "model": {
            "type": "string"
          },
          "airport": {
            "type": "string"
          }
        },
        "required": [
          "tailNumber",
          "model",
          "airport"
        ],
        "additionalProperties": false
      },
      "PlaneRefuelRequest": {
        "type": "object",
        "properties": {
          "amount": {
            "type": "number",
            "format": "float",
            "minimum": 0
          }
        },
        "required": [
          "amount"
        ],
        "additionalProperties": false
      },
      "PlaneEmbarkRequest": {
        "type": "object",
        "properties": {
          "destination": {
            "type": "string"
          }
        },
        "required": [
          "destination"
        ],
        "additionalProperties": false
      },
      "PlaneResponse": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "owner": {
            "type": "string"
          },
          "model": {
            "type": "string"
          },
          "whereabouts": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "airport"
                    ]
                  },
                  "airport": {
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "airport"
                ],
                "additionalProperties": false,
                "x-required": true
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "enRoute"
                    ]
                  },
                  "enRoute": {
                    "type": "object",
                    "properties": {
                      "departure": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "origin": {
                        "type": "string"
                      },
                      "destination": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "departure",
                      "origin",
                      "destination"
                    ],
                    "additionalProperties": false
                  }
                },
                "required": [
                  "type",
                  "enRoute"
                ],
                "additionalProperties": false,
                "x-required": true
              }
            ]
          },
          "fuel": {
            "type": "number",
            "format": "float",
            "minimum": 0
          },
          "upgradeLevel": {
            "type": "integer",
            "minimum": 0,
            "maximum": 3
          },
          "condition": {
            "type": "number",
            "format": "float",
            "minimum": 0,
            "maximum": 100
          }
        },
        "required": [
          "_id",
          "owner",
          "model",
          "whereabouts",
          "fuel",
          "upgradeLevel",
          "condition"
        ],
        "additionalProperties": false
      },
      "PackageLoadRequest": {
        "type": "object",
        "properties": {
          "plane": {
            "type": "string"
          }
        },
        "required": [
          "plane"
        ],
        "additionalProperties": false
      },
      "PackageResponse": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "cargo",
              "passenger"
            ]
          },
          "count": {
            "type": "integer",
            "minimum": 1
          },
          "goal": {
            "type": "string"
          },
          "whereabouts": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "airport"
                    ]
                  },
                  "airport": {
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "airport"
                ],
                "additionalProperties": false,
                "x-required": true
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "plane"
                    ]
                  },
                  "plane": {
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "plane"
                ],
                "additionalProperties": false,
                "x-required": true
              }
            ]
          },
          "payout": {
            "type": "number",
            "format": "float",
            "minimum": 0
          },
          "unitMass": {
            "type": "number",
            "format": "float",
            "minimum": 0
          },
          "expiration": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "_id",
          "name",
          "type",
          "count",
          "goal",
          "whereabouts",
          "payout",
          "unitMass",
          "expiration"
        ],
        "additionalProperties": false
      },
      "AirplaneModelResponse": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "baseCruise": {
            "type": "number",
            "format": "float",
            "minimum": 0
          },
          "cost": {
            "type": "number",
            "format": "float",
            "minimum": 0
          },
          "cargoCapacity": {
            "type": "number",
            "format": "float",
            "minimum": 0
          },
          "baseFuelBurn": {
            "type": "number",
            "format": "float",
            "minimum": 0
          },
          "fuelCapacity": {
            "type": "number",
            "format": "float",
            "minimum": 0
          },
          "passengerSeats": {
            "type": "integer",
            "minimum": 0
          }
        },
        "required": [
          "_id",
          "name",
          "baseCruise",
          "cost",
          "cargoCapacity",
          "baseFuelBurn",
          "fuelCapacity",
          "passengerSeats"
        ],
        "additionalProperties": false
      }
    },
    "parameters": {
      "AllAirportsParams": [
        {
          "in": "query",
          "name": "limit",
          "schema": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 10
          },
          "required": false
        },
        {
          "in": "query",
          "name": "page",
          "schema": {
            "type": "integer",
            "minimum": 1,
            "default": 1
          },
          "required": false
        }
      ],
      "NearbyAirportsParams": [
        {
          "in": "query",
          "name": "radius",
          "schema": {
            "type": "number",
            "format": "float",
            "minimum": 1,
            "maximum": 20000000,
            "default": 100000
          },
          "required": false
        },
        {
          "in": "query",
          "name": "limit",
          "schema": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 10
          },
          "required": false
        },
        {
          "in": "query",
          "name": "page",
          "schema": {
            "type": "integer",
            "minimum": 1,
            "default": 1
          },
          "required": false
        }
      ]
    }
  },
  "paths": {},
  "tags": []
}